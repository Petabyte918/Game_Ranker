<div class="text-center" style="margin-left: 40px; margin-right: 40px">
  <form action="/auth/signup" method="POST">
    <div class="form-group">
      <label for="authEmail">Email</label>
      <input id="authEmail" class="form-control text-center" type="email" name="email" placeholder="Enter Email">
    </div>

    <div class="form-group">
      <label for="authFirstName">First name</label>
      <input id="authFirstName" class="form-control text-center" type="text" name="firstName" placeholder="Name must be between 1 and 99 characters">
    </div>

    <div class="form-group">
      <label for="authLastName">Last name</label>
      <input id="authLastName" class="form-control text-center" type="text" name="lastName" placeholder="Name must be between 1 and 99 characters">
    </div>

    <div class="form-group">
      <label for="authPassword">Password</label>
      <input id="authPassword" class="form-control text-center" type="password" name="password" placeholder="Password must be between 8 and 99 characters">
    </div>

    <input class="btn btn-primary" type="submit">
  </form>
</div>