<h1 style="margin: 0 auto"><%= data[0].firstName %>'s Reviews</h1>
<div class="table table-striped">
  <table>
  <% data.forEach(function(data) { %>
    <div>
      <tr style="border: 1px solid black">
        <td>
          <% if(data.imgURL) { %> 
            <img class="col-md-3" style="height: 100px; width:130px" src="https://res.cloudinary.com/igdb/image/upload/t_cover_big_2x/<%= data.imgURL %>.webp">
          <% } else { %> 
            <img class="col-md-3" style="height: 100px; width:130px" src="/img/noImg.jpg"> 
          <% } %>
        </td>
        <td class="col-md-3">
          <strong><%= data.title %></strong>
        </td>
        <td class="col-md-3">
          <%= data.review %>
        </td>
        <td class="col-md-3">
          <% for(var i=0; i < (data.rating) * 2; i++) { %>
          <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
          <% } if(!data.rating) { %>
          <%= 0 %>
          <% } %>
          /10
        </td>
        <td>
          <form method="post" action="/update/<%= data.id %>">
            <input type="text" name="newReview" placeholder="Re-write your review here">
            <input id="<%= data.id %>" type="button" name="update" class="btn btn-warning update-button" value="Update Review">
          </form>
          <hr>
          <input id="<%= data.id %>" type="button" name="delete" class="btn btn-danger delete-button" value="Delete Review">
        </td>
      </tr>
    </div>
  <% }); %>
  </table>
</div>
