<h1 class="text-center"><%= games[0].firstName %>'s Reviews</h1>
<hr>
<div class="table table-striped">
  <% games.forEach(function(data) { %>
      <% if (data.title != null) { %>
      <div class="row">
        <div class="col-md-3">
          <% if(data.imgURL) { %> 
            <a href="/game/<%= data.apiId %>"><img class="img-responsive" src="https://res.cloudinary.com/igdb/image/upload/t_cover_big_2x/<%= data.imgURL %>.webp"></a>
          <% } else { %> 
            <a href="/game/<%= data.apiId %>"><img class="img-responsive" src="./img/noImg.jpg"> </a>
          <% } %>
        </div>
        <div class="col-md-3">
          <p><strong><%= data.title %></strong></p>
          <p><%= data.review %></p>
          <p><% for(var i=0; i < (data.rating); i++) { %>
            <% if(data.rating >1) { %>
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
            <% } %>
          <% } if(!data.rating) { %>
            <%= 0 / 5 %>
          <% } %>
          <% if(data.rating % 1 != 0) { %>
            <i class="fa fa-star-half" aria-hidden="true"></i>
          <% } %>
          </p>
        </div>
        <div class="col-md-5">
          <form id="<%= data.gameId %>" method="post" action="/update/<%= data.id %>">
            <textarea class="form-control" rows="3" type="text" name="newReview" placeholder="Re-write your review here"></textarea>
            <input id="<%= data.gameId %>" type="button" name="update" class="btn btn-warning update-button" value="Update Review">
          </form>
          <input id="<%= data.gameId %>" type="button" name="delete" class="btn btn-danger delete-button" value="Delete Review">
        </div>
      </div>
    <hr>
    <% } %>
  <% }); %>
</div>