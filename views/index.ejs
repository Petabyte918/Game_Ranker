<h2 class="text-center">Welcome!</h2>

<h3 class="text-center">Sign Up To Review</h3>

<hr>
<div class="table table-striped col-md-offset-3">
  <% games.forEach(function(data) { %>
      <% if (data.title != null) { %>
      <div class="row">
        <div class="col-md-3 col-md-3-offset">
          <% if(data.imgURL) { %> 
            <a href="/game/<%= data.apiId %>"><img class="img-responsive" src="https://res.cloudinary.com/igdb/image/upload/t_cover_big_2x/<%= data.imgURL %>.webp"></a>
          <% } else { %> 
            <a href=""><img class="img-responsive" src="./img/noImg.jpg"> </a>
          <% } %>
        </div>
        <div class="col-md-3">
          <p><strong><%= data.title %></strong></p>
          <h3>Review By <%= data.firstName %></h3>
          <p><%= data.review %></p>
          <p><% for(var i=0; i < (data.rating); i++) { %>
            <% if(data.rating >1) { %>
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
            <% } %>
          <% } if(!data.rating) { %>
            <%= 0 / 5 %>
          <% } %>
          <% if(data.rating % 1 != 0) { %>
            <i class="fa fa-star-half" aria-hidden="true"></i>
          <% } %>
          </p>
        </div>
      </div>
    <hr>
    <% } %>
  <% }); %>
</div>